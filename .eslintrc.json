{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "google",
    "plugin:react/recommended",
    "plugin:jsx-a11y/recommended"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "max-len": ["error", {"code": 1200}],
    "arrow-parens": [2, "as-needed"],
    "no-console": 2,
    "no-debugger": 2,
    "no-alert": 2
  }
}
